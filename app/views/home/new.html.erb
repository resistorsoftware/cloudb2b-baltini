<div data-controller="home">
  <%= polaris_page(title: "Import Duty and Tax Settings") do |page| %>
    <% page.with_custom_primary_action do %>
      <%= polaris_button(url: "home/new") { "Add Country" } %>
    <% end %>
    <%= polaris_layout do |layout| %>
      <% layout.with_section do %>
        <%= render partial: "logo" %>
        <div id="rates">
          <%= polaris_card do %>
            <%= polaris_form_layout do |form_layout| %>
              <form>
                <% form_layout.with_group(condensed: true) do |group| %>
                  <% group.with_item do %>
                    <%= polaris_text_field(
                      name: "country", 
                      label: "Country Code", 
                      value: params["countryCode"], 
                      type: :text, 
                      "data-home-target": "input"
                    ) %>
                  <% end %>
                  <% group.with_item do %>
                    <%= polaris_text_field(
                      name: "threshold", 
                      label: "Threshold", 
                      value: params["threshold"], 
                      type: :number, 
                      min: 0, 
                      step: 1.0,  
                      "data-home-target": "input"
                    ) %>
                  <% end %>
                  <% group.with_item do %>
                    <%= polaris_text_field(
                      name: "percentage", 
                      label: "Percentage", 
                      value: params["percentage"], 
                      prefix: "%", 
                      type: :number, 
                      min: 0, 
                      step: 1,
                      "data-home-target": "input"
                    ) %>
                  <% end %>
                <% end %>
              </form>
            <% end %>
            <%= polaris_spacer(vertical: :extra_loose) %>
            <%= polaris_horizontal_stack(block_align: :end) do %>
              <%= polaris_button(url: "/") { "Cancel" } %>&nbsp;
              <%= polaris_button(primary: true, "data-action": "click->home#create") { "Save Settings" } %>
            <% end %>
          <% end %>
        </div>
      <% end %>
    <% end %>
  <% end %>
</div>

